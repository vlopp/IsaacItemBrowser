{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "downlevelIteration": true,
    "paths": {
      "$root/*": ["*"],
      "$redux/*": ["redux/*"],
      "$storybook/*": ["../.storybook/*"],
      "$tests/*": ["../tests/*"],
      "$stories/*": ["../stories/*"],
      "$gameData/*": ["gameData/*"]
    }
  },
  "include": ["src"]
}
